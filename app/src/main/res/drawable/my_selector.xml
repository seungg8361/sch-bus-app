<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 선택되지 않은 상태 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 배경색 -->
            <stroke android:color="#000000" android:width="1dp" /> <!-- 경계선 -->
        </shape>
    </item>
    <!-- 선택된 상태 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#888585" /> <!-- 선택된 상태일 때의 배경색 -->
            <stroke android:color="#000000" android:width="1dp" /> <!-- 선택된 상태일 때의 경계선 -->
        </shape>
    </item>
</selector>
