<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="순천향대학교 통학버스"
        android:textColor="#24549B"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#FFFFFF"
        android:text="버스 예매"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

    <Button
        android:id="@+id/morningButton"
        android:layout_width="155dp"
        android:layout_height="80dp"
        android:backgroundTint="#DEEAEF"
        android:text="등교"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>


    <Button
        android:id="@+id/dinnerButton"
        android:layout_width="155dp"
        android:layout_height="80dp"
        android:backgroundTint="#DEEAEF"
        android:text="하교"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/inquiryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FFFFFF"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:text="승차권 조회"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:icon="@drawable/ic_baseline_person_24" />

        <Button
            android:id="@+id/louteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFFFFF"
            android:drawableStart="@drawable/ic_baseline_directions_bus_24"
            android:drawableLeft="@drawable/ic_baseline_directions_bus_24"
            android:text="노선별 승차장소"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp"
            app:icon="@drawable/ic_baseline_directions_bus_24" />


    <Button
        android:id="@+id/reservationcomplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFF"
        android:drawableStart="@drawable/ic_baseline_check_24"
        android:text="구매내역 조회"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18dp"/>


</LinearLayout>
