<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#F9F9F9"
        android:text="◀" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/ic_baseline_directions_bus_24" />

    <Button
        android:id="@+id/gyodae1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#ffffff"
        android:text="교대 ( 15 : 20 )"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/gyodae2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:text="교대 ( 19 : 00 )"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/ansan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:text="안산 ( 19 : 00 )"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/incheon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:text="인천 ( 18 : 30 )"
        android:textSize="18dp"/>
    <Button
        android:id="@+id/songnae"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:text="송내역 ( 19 : 00 )"
        android:textSize="18dp"/>

</LinearLayout>
